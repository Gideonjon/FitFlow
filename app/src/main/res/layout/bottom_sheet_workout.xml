<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#00C896">

        <TextView
            android:id="@+id/tvWorkoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvWorkoutType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Type"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/tvWorkoutLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: Beginner"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment: Dumbbells"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvMuscles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscles: Chest, Arms"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#E0E0E0" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="ifContentScrolls">

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions will be shown here..."
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="16dp" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
